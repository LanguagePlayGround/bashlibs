#!/bin/bash
REAL_DIR=

my_real_dir() {
    if [[ -z $REAL_DIR ]]
    then
        REAL_DIR=$(dirname $(realpath $(echo $0 | sed "s/$(basename $0)/bake/")))
        echo $REAL_DIR
    else
        echo $REAL_DIR
    fi
}

source $(my_real_dir)/bake-intree-init > /dev/null 2>&1 \
    || $(bashlibs --load-base)
include bake.sh
include verbose.sh
VERBOSE=2

hosts() {
    args
}

log_and_run() {
    local cmd="$@"

    echo "$cmd"
    $cmd
}

create_package() {
    local package_name=$1
    local host=$2

    log_and_run $(progdir)/bake \
        -q -v -v \
        --server $host \
        --find $package_name
}

all_packages() {
    echo cmake-macros
    echo bashlibs-cmake-macros
    echo bashlibs-base

    $(progdir)/bake -l \
        | awk '{print $2}' \
        | grep -v cmake-macros \
        | grep -v bashlibs-cmake-macros \
        | grep -v bashlibs-base \
        | grep -v skelaton \
        | xargs basename -a
}

main() {
    local host
    local i

    cd $(progdir)/..

    for host in $(hosts)
    do
        for i in $(all_packages)
        do
            create_package $i $host
        done
    done
}
main
