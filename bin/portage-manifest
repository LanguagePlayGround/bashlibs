#!/bin/bash                                                                
source $(dirname $0)/../src/bashlibs-base/lib/header.sh

gen_manifests() {
    local portage_dir=$1

    cd $portage_dir
    repoman -q -f manifest
    cd - > /dev/null 2>&1
}

main() {
    gen_manifests $(progdir)/../gentoo/portage
}
main
