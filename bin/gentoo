#!/bin/bash                                                                
source $(dirname $0)/../src/bashlibs-base/lib/header.sh

gen_manifests() {
    local portage_dir=$1

    cd $portage_dir
    repoman -q -f manifest
    cd - > /dev/null 2>&1
}

all_project_dirs() {
    local projects_dir=$1

    find $projects_dir \
        -maxdepth 2 \
        -name CMakeLists.txt \
        -exec dirname {} \; 
}

gen_all_tar_files() {
    local projects_dir=$1
    local i

    for i in $(all_project_dirs $projects_dir)
    do
        $(progdir)/gentbz $i
    done
}

main() {
    gen_all_tar_files $(progdir)/../src
    gen_manifests $(progdir)/../gentoo/portage
}
main
