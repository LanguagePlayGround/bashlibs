#!/bin/bash
source $(progdir)/bashlibs-intree-init
source $(progdir)/pkg-common
include verbose.sh

gen_manifests() {
    local portage_dir=$1

    vinfo "Generating Manifest files for portage directory: $portage_dir"
    cd $portage_dir
    repoman -q -f manifest
    cd - > /dev/null 2>&1
}

all_project_dirs() {
    local projects_dir=$1

    find $projects_dir \
        -maxdepth 2 \
        -name CMakeLists.txt \
        -exec dirname {} \; 
}

gen_all_tar_files() {
    local projects_dir=$1
    local i

    vinfo "Generating source packages"
    for i in $(all_project_dirs $projects_dir)
    do
        $(progdir)/gentbz $i
    done
}

main() {
    gen_all_tar_files $(progdir)/../src
    gen_manifests $(progdir)/../gentoo/portage
}
main
