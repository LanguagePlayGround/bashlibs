#!/bin/bash
source $(progdir)/bashlibs-intree-init
source $(dirname $0)/../src/bashlibs-build-utils/lib/package_build.sh
source $(dirname $0)/../src/bashlibs-build-utils/lib/deb_repository.sh
include verbose.sh

main() {
    cmdline
	clean_remote_dirs
	gen_changelog
	copy_sources_to_target
    run_cmake
    copy_deb_to_apt_archives
    install_deb
	archive_deb \
        /var/cache/apt/archives/$(cmake_deb_filename) \
        $(deb_archive_dir)
#	run_remote dpkg -L $(cmake_project_name)
#	run_remote aptitude install $(cmake_project_name)
#	run_remote $PROGNAME --test
}
main
